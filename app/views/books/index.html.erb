<div class="body">

  <%= render "users/header" %>

  <div class="container">


   <p id="notice"><%= flash[:notice] %></p>

   <% if @book.errors.any? %>
   <div id="error_explanation" >
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <%= @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>

      <%= render 'users/sidebar', user: @user %>
      <%= render 'books/newform', book:@book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '50x50'  %></td>

            <td><%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<%= render 'users/footer' %>

</div>
