<div class="body">

  <%= render "users/header" %>

  <div class="container">


   <p id="notice"><%= flash[:notice] %></p>


   <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>

      <%= render 'users/sidebar', user: @user %>
      <%= render 'books/newform', book:@book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <% if @user.profile_image.nil? %>
            <td><% link_to user_path(@user) do %>
              <%= image_tag ("no_image.jpg") %>
              <% end %>
            </td>
            <% else %>
            <td><% link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40,format:"jpg", class:"attachment user profile_image fallback" %>
              <% end %>
            </td>
            <% end %>
            <td><%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<%= render 'users/footer' %>

</div>
