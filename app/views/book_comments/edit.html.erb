<div class="body">

  <%= render "users/header" %>

  <div class="container">
    <div class="col-md-6 col-md-offset-3" >
    <h1>Editing Comment</h1>

    <%= form_for [@book, @book_comment] do |f| %>

    <div class="field row">
      <label for="book_comment">Comment</label>
     <%= f.text_area :comment, class:"col-xs-12 book_comment" %>
</div>

<div class="actions row">
  <%= f.submit 'Update Book_comment', name:"commit", class:"btn btn-primary col-xs-12" %>
</div>

    <% end %>
  <a class= "book_id" href="/books/<%= @book.id %>">Show</a>
  |
    <a class= "back" href="/books">Back</a>
  </div>

</div>

  <%= render "users/footer" %>

</div>
